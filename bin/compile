#!/usr/bin/env bash

# fail fast
set -eu

install_graal() {
  local jdk_dir=${1:?}
  local url="${GRAAL_URL:-https://github.com/graalvm/graalvm-ce-builds/releases/download/vm-21.0.0.2/graalvm-ce-java11-linux-amd64-21.0.0.2.tar.gz}"

  rm -rf $jdk_dir # clobber any previously installed jdk
  mkdir -p $jdk_dir

  echo "-----> Installing GraalVM"
  curl --retry 3 -sL "$url" | tar xzm -C $jdk_dir --strip-components=1
  echo "       - done"
}

create_profile_scripts() {
  local home=${1:?}
  local url=${2:?}

  mkdir -p $home/.profile.d

  echo "-----> Configuring"
  curl -o $home/.profile.d/graal.sh -sL "$url/opt/jvmcommon.sh"
  curl -o $home/.profile.d/jdbc.sh -sL "$url/opt/jdbc.sh"
  echo "       - done"
}

create_export_script() {
  local jdk_dir=${1:?}
  local home=${2:?}

  if [ -w ${home} ]; then
    cat << EOF > ${home}/export
export JAVA_HOME=$jdk_dir
export PATH=\$JAVA_HOME/bin:\$PATH
export LD_LIBRARY_PATH="\$JAVA_HOME/lib/server:\$LD_LIBRARY_PATH"
EOF
  fi
}

# parse args
BUILD_DIR=$1
CACHE_DIR=$2

BP_DIR="$(cd "$(dirname "$0")" && pwd)"
OPT_DIR=$BP_DIR/../opt/

JDK_DIR="$BUILD_DIR/.jdk"
JVM_COMMON_URL="https://raw.githubusercontent.com/heroku/heroku-buildpack-jvm-common/main/"

install_graal $JDK_DIR
create_profile_scripts $BUILD_DIR $JVM_COMMON_URL
create_export_script $JDK_DIR $BUILD_DIR
